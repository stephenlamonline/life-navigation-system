<!--pages/profile/profile.wxml-->
<!--pages/personinfo/personinfo.wxml-->
<view class="container">
 
 <view class="info-box">
   <view style="text-align: center;margin-bottom:10%;">
     <image style="position: relative; left: -244rpx; top: -190rpx" class="avatar-img" src="{{avatarUrl}}" />
   </view>
   <!-- <progress percent="80" stroke-width="12" show-info color="pink" /> -->

   <text style="width: 458rpx; height: 61rpx; display: block; box-sizing: border-box; position: relative; left: 68rpx; top: -404rpx">{{nickName}}</text>


 </view>
 <view class="container" style="position: relative; left: 0rpx; top: -399rpx">
  <view class='progress_box'>
  <!-- 背景 灰色 -->
    <canvas class="progress_bg" id="canvasProgressbg" canvas-id="canvasProgressbg"> </canvas>

    <!-- 进度 -->
    <canvas class="progress_canvas" id="canvasProgress" canvas-id="canvasProgress"> </canvas>

    <!-- 中间显示的文本 -->
    <view class="progress_text">
      <view class="progress_dot"></view>
      <text class='progress_info'> {{progress_txt}}</text>
    </view>
    
  </view>
</view>


 </view>
